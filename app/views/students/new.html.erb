<%= link_to("<<Back to List", {:action => 'list'} ,:class => 'back-link')%>


	
<div>
	<h2>Create Student</h2>
	
	<%= form_for(:student, :url => {:action => 'create'}) do |f| %>
	<table >
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name)%></td>
		</tr>
		<tr>
			<th>Username</th>
			<td><%= f.text_field(:username)%></td>
		</tr>
		<tr>
			<th>password</th>
			<td><%= f.text_field(:password)%></td>
		</tr>
		<tr>
			<th>Class</th>
			<td><%= f.text_field(:std)%></td>
		</tr>
		<tr>
			<th>Section</th>
			<td><%= f.text_field(:section)%></td>
		</tr>
		<tr>
			<th>Email Id</th>
			<td><%= f.text_field(:email)%></td>
		</tr>
		<tr>
			<th>Mobile No.</th>
			<td><%= f.text_field(:mobile)%></td>
		</tr>
		
		</table>
		<div >
			<%= submit_tag("Create Student")%>
		</div>
	
	<% end %>
</div>

