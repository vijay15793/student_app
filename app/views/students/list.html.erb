<%if !flash[:notice].blank? %>
<div>
	<%=flash[:notice]%>
</div>
<%end%>
<div>
	
<h2>Students:</h2>
<%= link_to("Add new student", {:action => 'new'} )%>

<table>
	<tr>
		<th>Name</th>
		<th>Username</th>
		<th>Class</th>
		<th>Section</th>
		<th>Email Id</th>
		<th>Mobile No.</th>
		<th>Actions</th>
		
	</tr>
	<% @student.each do |student|%>
	<tr>
		<td><%= student.name%></td>
		<td><%= student.username%></td>
		<td><%= student.std%></td>
		<td><%= student.section%></td>
		<td><%= student.email%></td>
		<td><%= student.mobile%></td>
		<td>
			<%= link_to("Show",{:action => 'show', :id => student.id})%>
			<%= link_to("Edit",{:action => 'edit', :id => student.id})%>
			<%= link_to("Delete",{:action => 'delete', :id => student.id})%>
		</td>
	</tr>
	<% end %>
</table>


</div>